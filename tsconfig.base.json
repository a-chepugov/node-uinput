{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "build",
    "target": "es2015",
    "noEmit": true,
    "declaration": false,
    "removeComments": true,
    "moduleResolution" : "node",
    "strict": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "allowJs": true,
    "checkJs": true,
    "stripInternal": true,
    "sourceMap": true,
    "noErrorTruncation": true,
    "esModuleInterop": true,
    "pretty": true
  },
  "include": [ "src" ],
  "exclude": [
    "./*.js",
    "./*.cjs",
    "./*.mjs",
    "./*.ts",
    "lib",
    "build",
    "coverage",
    "docs",
    "./node_modules/**/*.ts",
    "**/*.test.ts"
  ]
}
